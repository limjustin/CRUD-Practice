<h1 align="center" style="padding-top: 15px; padding-bottom: 15px;">Music Upload Website</h1>

<div class="col-md-12">

    <!--로그인 기능-->
    <div class="row">
        <div class="col-md-6">
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
            {{^userName}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
            {{/userName}}
        </div>
    </div>

    <!--글 등록 기능-->
    <div class="row" style="padding-bottom: 20px;">
        <div class="col-md-12" align="center">
            <a href="/music/save" role="button" class="btn btn-primary btn-success" >글 등록</a>
        </div>
    </div>

    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th class="text-center">INDEX</th>
            <th class="text-center">TITLE</th>
            <th class="text-center">ARTIST</th>
            <th class="text-center">ALBUM</th>
            <th class="text-center">LYRICS</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#musics}}
        <tr>
            <td class="text-center">{{id}}</td>
            <td class="text-center"><a href="/music/update/{{id}}">{{title}}</a></td>
            <td class="text-center">{{artist}}</td>
            <td class="text-center">{{album}}</td>
            <td class="text-center">{{lyrics}}</td>
        </tr>
        {{/musics}}
        </tbody>
    </table>

</div>

{{>layout/footer}}